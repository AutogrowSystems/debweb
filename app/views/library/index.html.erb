<h1>Library</h1>

<p>Path: <%= @library.path %> (<%= @library.size %>)</p>

<%= form_tag 'branches/add_pacakges' do %>

<p><%= submit_tag "Add packages to branch: " %> <%= select_tag :branch_id, options_for_select(@branches) %></p>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Size</th>
      <th width="5px"></th>
    </tr>
  </thead>
  <tbody>
    <% @library.files.each do |file| %>
    <tr>
      <td><%= File.basename file %></td>
      <td><%= (File.size(file).to_f / 1024 / 1024).round(2) %> MB</td>
      <td><%= check_box_tag "adding[]", value: file %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<% end %>
