<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Branch</th>
      <th>Version</th>
      <th>Arch</th>
      <th>Path</th>
      <th>Auto Add</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% packages.each do |package| %>
      <tr>
        <td><%= link_to package.name, package %></td>
        <td><%= project_link package.branch.project %> / <%= link_to package.branch.name, package.branch %></td>
        <td><%= package.version %></td>
        <td><%= package.control["Architecture"] %></td>
        <td><%= package.path %></td>
        <td><%= auto_add_package_label(package) %></td>
        <td><%= link_to 'Show', package %></td>
        <td><%= link_to 'Edit', edit_package_path(package) %></td>
        <td><%= link_to 'Destroy', package, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

