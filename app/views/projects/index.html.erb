<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<%= form_for(Project.new) do |f| %>
   <p><%= f.text_field :name, placeholder: "Project Name" %> <%= f.submit %></p>
<% end %>                                                                

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Branches</th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= raw project.branches.map {|b| link_to(b.name, b) }.join(', ') %></td>
        <td><%= link_to "Build", build_project_path(project) %></td>
      </tr>
    <% end %>
  </tbody>
</table>


