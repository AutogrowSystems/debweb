<p id="notice"><%= notice %></p>

<h1>Projects</h1>

<%= form_for(Project.new) do |f| %>
  <div class="form-inline">
    <%= f.text_field :name, autofocus: true, placeholder: "Project Name", class: "form-control" %>
    <%= f.submit class: "form-control btn btn-primary" %></p>
  </div>
<% end %>                                                                

<table class="table table-hover table-striped">
  <thead>
    <tr>
      <th>Name</th>
      <th>Branches</th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
      <tr>
        <td><%= link_to project.name, project %></td>
        <td><%= raw project.branches.map {|b| link_to(b.name, b) }.join(', ') %></td>
        <td>
          <%= link_to glyph('repeat')+" Rebuild", rebuild_project_path(project), class: "btn btn-xs btn-warning" %>
          <%= link_to glyph('refresh')+" Refresh", refresh_project_path(project), class: "btn btn-xs btn-info" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>


